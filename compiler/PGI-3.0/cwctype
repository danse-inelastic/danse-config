#if !defined(__config_compiler_cwctype__)
#define __config_compiler_cwctype__

//
// Deficiency file: route cwctype to wctype.h
// and import symbols into namespace std
//

#include <wctype.h>

namespace std {
  /* Standard C wide-character classification functions and types */
  using ::wint_t;
  using ::wctrans_t;
  using ::wctype_t;
  using ::iswalnum;
  using ::iswalpha;
  using ::iswcntrl;
  using ::iswdigit;
  using ::iswgraph;
  using ::iswlower;
  using ::iswprint;
  using ::iswpunct;
  using ::iswspace;
  using ::iswupper;
  using ::iswxdigit;
  using ::iswctype;
  using ::wctype;
  using ::towlower;
  using ::towupper;
#ifdef _WCTYPE_H
  using ::wctrans;
  using ::towctrans;
#endif
}

#endif

