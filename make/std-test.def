show-configuration:
	@echo " "       
	@echo "  Environment"
	@echo "  -----------"
	@echo "             source tree : $(BLD_ROOT)"
	@echo "        operating system : $(PLATFORM_ID)"
	@echo "            build target : $(TARGET_ID)"
	@echo "               C compiler: $(CC_ID) as $(CC)"
	@echo "             C++ compiler: $(CXX_ID) as $(CXX)"
	@echo "         FORTRAN compiler: $(F77_ID) as $(F77)"
	@echo " "        

show-project:
	@echo "  Project settings"
	@echo "  ----------------"
	@echo "                    name : $(PROJECT)"
	@echo "     temporary directory : $(PROJ_TMPDIR)"
	@echo "                 library : $(PROJ_LIB)"
	@echo "             C++ library : $(PROJ_CXX_LIB)"
	@echo "                 sources : $(PROJ_SRCS)"
	@echo "                 objects : $(PROJ_OBJS)"
	@echo "            dependencies : $(PROJ_DEPENDENCIES)"
	@echo " "        

